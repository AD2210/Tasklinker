{% extends 'base.html.twig' %}

{% block header %}
    <h1>{{employee.firstname}} {{employee.name}}</h1>
{% endblock %}
                
{% block body %}
    {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.firstname) }}
        {{ form_row(form.email) }}
        <div class="form-flex">
            {{ form_row(form.entry_date) }}
            {{ form_row(form.status) }}
        </div>
        {{ form_row(form.admin) }}
        <button class="button button-submit">Enregistrer</button>
    {{ form_end(form) }}                
{% endblock %}
