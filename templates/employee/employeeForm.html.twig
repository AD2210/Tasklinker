{% extends 'base.html.twig' %}

{% block body %}
    <main>
        <header>
            <div id="current-user"></div>
            <div id="title-page">
                <h1>{{employee.firstname}} {{employee.name}}</h1>
            </div>
        </header>
        <div id="content">
            {{ form_start(form) }}
                {{ form_row(form.name) }}
                {{ form_row(form.firstname) }}
                {{ form_row(form.mail) }}
                <div class="form-flex">
                    {{ form_row(form.entry_date) }}
                    {{ form_row(form.status) }}
                </div>
                <button class="button button-submit">Enregistrer</button>
            {{ form_end(form) }}                
        </div>
    </main>
{% endblock %}
